@model achorostian.Models.Brand
@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    ViewBag.Title = "Usuń producenta";
    <h2>@ViewBag.Title</h2>
    <h3>Czy na pewno chcesz usunąć tego producenta z listy?</h3>
    <h4>Zostaną usunięte wszystkie (@Model.Phones.Count()) powiązane urządzenia!</h4>
}
    <div>
        <hr />
        @if (Request.IsAuthenticated)
        {
            <dl class="dl-horizontal">

                <dt>@Html.DisplayNameFor(model => model.Name)</dt>
                <dd>@Html.DisplayFor(model => model.Name)</dd>

                <dt>@Html.DisplayNameFor(model => model.Year)</dt>
                <dd>@Html.DisplayFor(model => model.Year)</dd>

                <dt>Liczba urządzeń</dt>
                <dd>@Model.Phones.Count()</dd>

            </dl>
        }
        @using (Html.BeginForm())
        {
            if (Request.IsAuthenticated)
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Usuń" class="btn btn-default" /><br /><br />
                    @Html.ActionLink("Wróć do listy", "Index")
                </div>
            }
        }
    </div>
